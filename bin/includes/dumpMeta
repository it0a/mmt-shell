#!/bin/bash
dump_table() {
    unk_status "Dumping $1..."
    mysqldump -h $BCMT_HOST -P $BCMT_PORT -u $BCMT_USER -p$DBPASS --extended-insert=FALSE --skip-comments $BCMT_DBNAME $1 > $SCRIPTPATH/dump/$1.sql
    unk_ok_status
    git diff --quiet $SCRIPTPATH/dump/$1.sql
    DIFFRESULT=$?
    if [ $DIFFRESULT = "1" ]
    then
        echo -e "${COLOR_WHITE}[${COLOR_CYAN}DIFF${COLOR_WHITE}] Changes have been detected for $1${COLOR_NONE}"
    fi
}
